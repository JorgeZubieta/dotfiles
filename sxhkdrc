# Basic binds
super + Return
	$TERMINAL
super + d
    rofi -combi-modi window,drun -show combi -modi combi
super + r
	$TERMINAL -e $FILE
super + m
	$TERMINAL -e ncmpcpp
super + o
    rofi -combi-modi window,drun -show combi -modi combi
super + t
    $TERMINAL
super + {_,shift +} p
    scrot {,-s} $HOME/$(date +%Y-%m-%d_%H:%M:%S).png
super + shift + w
	$BROWSER
super + shift + g
	gimp

XF86AudioMute
	pactl set-sink-mute $(pactl list short sinks | grep RUNNING | cut -f1) toggle # mute sound
XF86Audio{Lower,Raise}Volume
    pactl set-sink-volume $(pactl list short sinks | grep RUNNING | cut -f1) {-,+}5% # decrease sound volume
